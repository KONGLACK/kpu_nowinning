<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_layout_hit3_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_hit3_run1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="홈 스틸"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"/>

            <Button
                android:id="@+id/btn_hit3_run2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="태그 업(희생플라이)"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"/>

            <Button
                android:id="@+id/btn_hit3_run3"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="희생 번트"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"/>

            <Button
                android:id="@+id/btn_hit3_run5"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="폭투"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"/>

            <Button
                android:id="@+id/btn_hit3_run6"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="패스트 볼(포수 공 놓침)"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"/>

            <Button
                android:id="@+id/btn_hit3_run7"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="수비 에러"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"/>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>