<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_Others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_HBP"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Hit by pitch"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"
                />

            <Button
                android:id="@+id/btn_Balk"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Balk"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"
                />

            <Button
                android:id="@+id/btn_IllPit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="illegal pitch"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"
                />

            <Button
                android:id="@+id/btn_OutOthers"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Out(others)"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"
                />

            <Button
                android:id="@+id/btn_PutonB"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Put on Base"
                android:textStyle="bold"
                app:backgroundTint="#F47D30"
                android:textColor="#1C315E"
                />


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>