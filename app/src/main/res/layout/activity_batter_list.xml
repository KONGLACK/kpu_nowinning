            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="소속"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/textView_list_team"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
